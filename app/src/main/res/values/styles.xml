<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/primaryLightColor</item>
        <item name="android:navigationBarColor">@color/primaryLightColor</item>
        <item name="android:colorBackground">@color/backgroundLight</item>
        <item name="android:colorForeground">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:textColorSecondaryInverse">@color/secondaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
    </style>

</resources>
